<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/binaryLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/binDec"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/binDec"
            android:text="Binary"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/hexInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HexLBL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="20sp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/binDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/hexInput"
            android:layout_alignStart="@+id/HexLBL"
            android:layout_below="@+id/hexInput"
            android:layout_marginTop="100dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/hexDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/binDec"
            android:layout_alignStart="@+id/binDec"
            android:layout_below="@+id/binDec"
            android:layout_marginTop="112dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/calculateHex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/toDec"
            android:layout_alignStart="@+id/hexDec"
            android:layout_marginTop="41dp"
            android:text="calculate"
            android:textSize="20dp"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/HexLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="Decimal"
            android:textColor="#000000"
            android:textSize="35sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/hexLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/hexDec"
            android:layout_alignBottom="@id/hexDec"
            android:layout_alignBaseline="@id/hexDec"
            android:text="Hex:"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/toDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/hexLBL"
            android:text="Hex"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/toHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"
            tools:ignore="HardcodedText"
            android:layout_below="@+id/calculateHex"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/toBinary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/binary3" />
    </RelativeLayout>
</LinearLayout>
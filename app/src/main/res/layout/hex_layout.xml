<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/hexInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="HardcodedText,LabelFor" />

        <TextView
            android:id="@+id/decHex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/hexInput"
            android:layout_alignStart="@+id/hexInput"
            android:layout_below="@+id/hexInput"
            android:layout_marginTop="100dp"
            android:text=""
            android:textColor = "#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/binHex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/decHex"
            android:layout_alignStart="@+id/decHex"
            android:layout_below="@+id/decHex"
            android:textColor = "#000000"
            android:layout_marginTop="112dp" />

        <Button
            android:id="@+id/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/binHex"
            android:layout_alignStart="@+id/binHex"
            android:layout_below="@+id/binHex"
            android:layout_marginTop="57dp"
            android:text="calculate"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>